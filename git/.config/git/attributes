# Auto detect text files and perform LF normalisation.
*   text=auto

### Common ###

# Documents
*.bibtex    text diff=bibtex
*.tex       text diff=tex
*.md        text
*.csv       text
*.tsv       text
*.sql       text

*.pdf   diff=pdf
*.doc   diff=doc
*.ppt   diff=doc
*.xls   diff=doc
*.rtf   diff=doc
*.odf   diff=odf
*.odt   diff=odf
*.odp   diff=odf

# Graphics
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.tif   binary
*.tiff  binary
*.ico   binary
*.ai    binary
*.bmp   binary
*.psd   binary
*.wbmp  binary
*.webp  binary
# SVG is treated as a binary asset by default.
*.svg   text

# Audio
*.m4a   binary
*.mid   binary
*.midi  binary
*.mp3   binary
*.ogg   binary

# Video
*.3gp   binary
*.fla   binary
*.flv   binary
*.m4v   binary
*.mov   binary
*.mp4   binary
*.mpeg  binary
*.mpg   binary
*.ogv   binary
*.swc   binary
*.swf   binary
*.webm  binary

# Archives
*.7z    binary
*.gz    binary
*.rar   binary
*.tar   binary
*.zip   binary

# Fonts
*.ttf   binary
*.eot   binary
*.otf   binary
*.woff  binary
*.woff2 binary

# Shell Scripts
*.sh    text eol=lf
*.zsh   text eol=lf
*.bash  text eol=lf
*.fish  text eol=lf
# Windows
*.bat   text eol=crlf
*.cmd   text eol=crlf
*.ps1   text eol=crlf

# General
*.txt   text

*.db        binary
*.sqlite    binary
*.sqlitedb  binary

# Configs
*.properties    text
*.json          text
*.yml           text
*.toml          text
*.ini           text
*.conf          text
*.config        text

# Lock Files
*.lock              text -diff
package-lock.json   text -diff

### C / C++ / C# ###

# Sources / Headers
*.c     text diff=cpp
*.cc    text diff=cpp
*.cxx   text diff=cpp
*.cpp   text diff=cpp
*.c++   text diff=cpp
*.h     text diff=cpp
*.hh    text diff=cpp
*.hpp   text diff=cpp
*.h++   text diff=cpp

*.cs    text diff=csharp

# Precompiled Headers
*.gch   binary
*.pch   binary

# Compiled Object Files
*.slo   binary
*.lo    binary
*.o     binary
*.obj   binary

# Compiled Dynamic Libraries
*.so    binary
*.dylib binary
*.dll   binary

# Compiled Static Libraries
*.lai   binary
*.la    binary
*.a     binary
*.lib   binary

# Executables
*.exe   binary
*.out   binary
*.app   binary

### Java ###

# Sources
*.java  text diff=java

# Compiled
*.class binary
*.jar   binary
*.war   binary
*.ear   binary

### Python ###

# Sources
*.py        text diff=python
*.python    text diff=python
*.py3       text diff=python
*.pxd       text diff=python
*.pyw       text diff=python
*.pyx       text diff=python
*.ipynb     text

# Compiled
*.pyc       binary
*.pyd       binary
*.pyo       binary
*.p         binary
*.pkl       binary
*.pickle    binary

### Web ###

# Sources
*.html  text diff=html
*.htm   text diff=html
*.xhtml text diff=html
*.php   text diff=php

*.css       text diff=css
*.scss      text
*.sass      text
